{
  "manifest_version": 2,
  "name": "Forge Clear",
  "version": "1.0",
  "description": "One-click clearing of cache and cookies (M.R. TechForge).",
  "permissions": ["browsingData"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Clear Cache & Cookies",
    "default_icon": {
      "48": "icon48.png",
      "96": "icon96.png"
    }
  },
  "applications": {
    "gecko": {
      "id": "forge-clear@mrtechforge.com"
    }
  }
}